{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2020"],
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs"
  },
  "include": ["src/**/*.ts"]
}
